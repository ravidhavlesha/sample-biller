{
  "version": 2,
  "builds": [{ "src": "src/index.js", "use": "@now/node-server" }],
  "env": {
    "JWT_SECRET_KEY": "@JWT_SECRET_KEY",
    "MONGO_URI": "@MONGO_URI"
  },
  "routes": [
    {
      "src": "/",
      "dest": "/src/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/bills/fetch",
      "dest": "/src/index.js",
      "methods": ["POST"]
    },
    {
      "src": "/bills/fetchReceipt",
      "dest": "/src/index.js",
      "methods": ["POST"]
    }
  ]
}
